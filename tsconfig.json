{
    "compilerOptions": {
        "target": "es5",
        "allowJs": false,
		"experimentalDecorators": true,
        "outDir": "build",
        "module": "commonjs",
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": [
        "src/**/*",
        "app.ts",
        "lib/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}